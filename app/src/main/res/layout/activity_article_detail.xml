<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/article_image"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/article_headline_text_size"
            android:textColor="#000"
            android:id="@+id/header"
            android:padding="7dp"
            android:layout_below="@+id/article_image"
            android:hint="@string/some_headline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000"
            android:id="@+id/writer"
            android:padding="7dp"
            android:layout_below="@+id/header"
            android:hint="@string/by_writer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:id="@+id/main_paragraph"
            android:padding="7dp"
            android:layout_below="@+id/writer"
            android:hint="@string/paragraph"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000"
            android:id="@+id/link_url"
            android:padding="7dp"
            android:layout_below="@+id/main_paragraph"
            android:hint="@string/www_nytimes_com_"/>

    </RelativeLayout>

</ScrollView>